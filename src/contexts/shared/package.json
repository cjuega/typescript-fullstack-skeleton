{
  "name": "@context/shared",
  "version": "1.0.1",
  "description": "Shared bounded context with common utilities",
  "author": "Carlos Juega",
  "license": "MIT",
  "files": [
    "./dist/"
  ],
  "typesVersions": {
    "*": {
      "*": [
        "dist/*"
      ]
    }
  },
  "exports": {
    "./*": "./src/*.ts"
  },
  "scripts": {
    "precommit": "npx lint-staged",
    "lint": "npx eslint . --ext .js,.ts",
    "test": "yarn test:unit",
    "test:unit": "NODE_ENV=test jest --verbose --passWithNoTests",
    "build": "yarn build:clean && yarn build:tsc",
    "build:clean": "rm -r dist; exit 0",
    "build:tsc": "tsc --build tsconfig.build.json && tscpaths -p tsconfig.build.json -s ./src -o ./dist"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.441.0",
    "@aws-sdk/client-eventbridge": "^3.441.0",
    "@aws-sdk/client-iot": "^3.441.0",
    "@aws-sdk/client-iot-data-plane": "^3.441.0",
    "@aws-sdk/lib-dynamodb": "^3.441.0",
    "@faker-js/faker": "^8.2.0",
    "avsc": "^5.7.7",
    "aws-xray-sdk": "^3.3.4",
    "dynamodb-onetable": "^2.3.2",
    "fast-glob": "^3.2.11",
    "kafkajs": "^2.2.4",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "protobufjs": "^7.2.5",
    "uuid-validate": "^0.0.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.7",
    "@types/jest-when": "^3.5.0",
    "@types/node": "^20.8.10",
    "@types/uuid": "^9.0.6",
    "@types/uuid-validate": "^0.0.2",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-module-resolver": "^1.4.0",
    "jest": "^29.7.0",
    "jest-when": "^3.5.1",
    "lint-staged": "^15.0.2",
    "ts-jest": "^29.1.1",
    "tsarch": "^5.3.0",
    "tscpaths": "^0.0.9",
    "typescript": "^5.2.2",
    "typescript-eslint": "^0.0.1-alpha.0"
  }
}
