{
  "name": "@context/shared",
  "version": "1.0.1",
  "description": "Shared bounded context with common utilities",
  "author": "Carlos Juega",
  "license": "MIT",
  "files": [
    "./dist/"
  ],
  "typesVersions": {
    "*": {
      "*": [
        "dist/*"
      ]
    }
  },
  "exports": {
    "./*": "./src/*.ts"
  },
  "scripts": {
    "precommit": "npx biome check --staged",
    "lint": "npx biome check --fix --since $(git describe --tags --abbrev=0)",
    "test": "yarn test:unit && yarn test:integration",
    "test:unit": "NODE_ENV=test jest --verbose",
    "test:integration": "NODE_ENV=test jest --config=jest.config.integration.js --verbose --runInBand",
    "build": "yarn build:clean && yarn build:tsc",
    "build:clean": "rm -r dist; exit 0",
    "build:tsc": "tsc --build tsconfig.build.json && tscpaths -p tsconfig.build.json -s ./src -o ./dist"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.441.0",
    "@aws-sdk/client-eventbridge": "^3.441.0",
    "@aws-sdk/client-iot": "^3.441.0",
    "@aws-sdk/client-iot-data-plane": "^3.441.0",
    "@aws-sdk/credential-provider-node": "^3.495.0",
    "@aws-sdk/lib-dynamodb": "^3.441.0",
    "@aws-sdk/util-dynamodb": "^3.501.0",
    "@elastic/elasticsearch": "^8.11.0",
    "@faker-js/faker": "^8.2.0",
    "@opensearch-project/opensearch": "^2.5.0",
    "amqplib": "^0.10.3",
    "avsc": "^5.7.7",
    "aws-xray-sdk": "^3.3.4",
    "dynamodb-onetable": "^2.3.2",
    "fast-glob": "^3.2.11",
    "ioredis": "^5.3.2",
    "kafkajs": "^2.2.4",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "mongodb": "^6.3.0",
    "mysql2": "^3.6.5",
    "protobufjs": "^7.2.5",
    "typeorm": "^0.3.17",
    "uuid-validate": "^0.0.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/amqplib": "^0.10.4",
    "@types/aws-lambda": "^8.10.132",
    "@types/jest": "^29.5.7",
    "@types/jest-when": "^3.5.0",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^20.8.10",
    "@types/uuid": "^9.0.6",
    "@types/uuid-validate": "^0.0.2",
    "jest": "^29.7.0",
    "jest-when": "^3.5.1",
    "ts-jest": "^29.1.1",
    "tsarch": "^5.3.0",
    "tscpaths": "^0.0.9",
    "typescript": "^5.2.2"
  }
}