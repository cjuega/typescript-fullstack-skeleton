{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "cacheDirectory": ".tmp/jestCache",
    "moduleNameMapper": {
        "@src/(.*)$": "<rootDir>/src/$1"
    },
    "coverageDirectory": "./reports/coverage",
    "coverageReporters": ["lcov", "text-summary"],
    "collectCoverageFrom": [
        "**/*.{ts}",
        "!**/node_modules/**",
        "!**/*.test.{ts}",
        "!**/*.mock.{ts}",
        "!**/*.mother.{ts}"
    ],
    "coverageThreshold": {
        "global": {
            "branches": 95,
            "functions": 95,
            "lines": 95,
            "statements": 95
        }
    }
}
