{
  "name": "@context/example",
  "version": "1.0.1",
  "description": "Example of a bounded context",
  "author": "Carlos Juega",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/"
  ],
  "typesVersions": {
    "*": {
      "dist/index.d.ts": [
        "dist/index.d.ts"
      ],
      "*": [
        "dist/*"
      ]
    }
  },
  "exports": {
    ".": "./dist/index.js",
    "./": "./dist/"
  },
  "scripts": {
    "precommit": "npx lint-staged",
    "lint": "npx eslint . --ext .js,.ts",
    "test": "yarn test:unit && yarn test:integration",
    "test:unit": "NODE_ENV=test jest --verbose",
    "test:integration": "NODE_ENV=test jest --config=jest.config.integration.js --verbose --runInBand --passWithNoTests",
    "build": "yarn build:clean && yarn build:tsc",
    "build:clean": "rm -r dist; exit 0",
    "build:tsc": "tsc  && tscpaths -p tsconfig.json -s ./src -o ./dist"
  },
  "dependencies": {
    "@context/shared": "^1.0.1"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-module-resolver": "^1.4.0",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "ts-jest": "^27.1.3",
    "tscpaths": "^0.0.9",
    "typescript": "^4.5.5",
    "typescript-eslint": "^0.0.1-alpha.0"
  }
}
