{
  "name": "@app/serverless",
  "version": "1.0.0",
  "description": "Serverless implementation in AWS of the example-context bounded context",
  "author": "Carlos Juega",
  "license": "MIT",
  "scripts": {
    "precommit": "npx lint-staged",
    "preversion": "yarn test",
    "postversion": "sed -i '' -E \"s/version: .*/version: $npm_package_version/\" docs/openapi.yml",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "dev": "npx sls offline --stage offline",
    "start:background": "./start-sls-offline.sh",
    "stop:background": "./stop-sls-offline.sh",
    "test": "yarn start:background && NODE_ENV=offline yarn test:only; status=`echo $?`; yarn stop:background; exit $status",
    "test:only": "npx jest --verbose --runInBand",
    "test:aws": "CLOUD_URL= jest --verbose --runInBand"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.92",
    "@types/convict": "^6.1.1",
    "@types/convict-format-with-validator": "^6.0.2",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "esbuild": "^0.14.23",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-module-resolver": "^1.4.0",
    "jest": "^27.5.1",
    "jest-cucumber": "^3.0.1",
    "serverless": "^3.4.0",
    "serverless-esbuild": "^1.25.0",
    "serverless-iam-roles-per-function": "^3.2.0",
    "serverless-offline": "^8.5.0",
    "serverless-offline-aws-eventbridge": "^1.6.6",
    "serverless-prune-plugin": "^2.0.1",
    "supertest": "^6.2.2",
    "typescript": "^4.5.5",
    "typescript-eslint": "^0.0.1-alpha.0"
  },
  "dependencies": {
    "@context/example": "^1.0.0",
    "@context/shared": "^1.0.0",
    "@middy/core": "^2.5.7",
    "@middy/http-cors": "^2.5.7",
    "convict": "^6.2.1",
    "convict-format-with-validator": "^6.2.0",
    "esbuild-plugin-copy": "^0.4.0",
    "source-map-support": "^0.5.21"
  }
}
